/* Seamless input styles – flush until focus */
.seamless-input { border: 1px solid transparent !important; background-color: transparent !important; transition: all .2s ease-in-out; box-shadow: none !important; outline: none !important; }
.demo-grid .seamless-input { border: 1px solid transparent !important; background-color: transparent !important; box-shadow: none !important; }

/* Idle/hover state remains flush */
.seamless-input:not(:focus),
.demo-grid .seamless-input:not(:focus) { border-color: transparent !important; background-color: transparent !important; box-shadow: none !important; }
.seamless-input:hover,
.demo-grid .seamless-input:hover { border-color: transparent !important; background-color: transparent !important; }

/* Focus state only */
.seamless-input:focus,
.demo-grid .seamless-input:focus { border-color: #dee2e6 !important; background-color: #f8f9fa !important; box-shadow: none !important; outline: none !important; }

/* Override Bootstrap and site.css validation classes (keep flush unless focused) */
.seamless-input.valid,
.seamless-input.is-valid,
.seamless-input:valid,
.seamless-input.valid.modified,
.seamless-input.modified.valid,
.demo-grid .seamless-input.valid,
.demo-grid .seamless-input.is-valid,
.demo-grid .seamless-input:valid,
.demo-grid .seamless-input.valid.modified,
.demo-grid .seamless-input.modified.valid { border: 1px solid transparent !important; background-color: transparent !important; box-shadow: none !important; outline: none !important; }

/* Focus still wins even when valid/modified */
.seamless-input.valid:focus,
.seamless-input.is-valid:focus,
.seamless-input:valid:focus,
.seamless-input.valid.modified:focus,
.seamless-input.modified.valid:focus,
.demo-grid .seamless-input.valid:focus,
.demo-grid .seamless-input.is-valid:focus,
.demo-grid .seamless-input:valid:focus,
.demo-grid .seamless-input.valid.modified:focus,
.demo-grid .seamless-input.modified.valid:focus { border-color: #dee2e6 !important; background-color: #f8f9fa !important; box-shadow: none !important; outline: none !important; }

