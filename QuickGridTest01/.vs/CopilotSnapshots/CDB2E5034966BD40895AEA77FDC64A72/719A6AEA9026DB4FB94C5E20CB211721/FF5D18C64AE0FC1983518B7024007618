/* Hide toggle on desktop */
@media (min-width: 641px) { .qg-nav-toggle { display:none; } }

/* Nav */
.qg-nav {
    background: var(--color-surface, #fff);
    border-right: 1px solid var(--color-border-subtle, #e9ecef);
    /* elegant scroll when content exceeds viewport */
    max-height: calc(100vh - 3.25rem);
    overflow-y: auto;
    overscroll-behavior: contain;
    scrollbar-gutter: stable both-edges;
}

/* Scrollbar aesthetics */
.qg-nav { scrollbar-color: var(--color-border-default, #d0d7de) transparent; }
.qg-nav::-webkit-scrollbar { width: 10px; }
.qg-nav::-webkit-scrollbar-track { background: transparent; }
.qg-nav::-webkit-scrollbar-thumb { background-color: var(--color-border-default, #d0d7de); border-radius: 8px; border: 2px solid var(--color-surface, #fff); }

.qg-nav.qg-collapsed { display: none; }

@media (min-width: 641px) {
    .qg-nav.qg-collapsed { display: block; }
}

.qg-nav-list {
    list-style: none;
    margin: 0;
    padding: var(--space-16, 1.25rem) var(--space-12, 1rem);
    display: flex;
    flex-direction: column;
    gap: var(--space-16, 1.25rem); /* generous spacing */
}

.qg-nav-item { margin: 0; }

/* Base link normalization via deep selector (NavLink renders <a>) */
::deep .qg-nav-link {
    all: unset; /* remove UA/Bootstrap hyperlink styles */
    -webkit-tap-highlight-color: transparent;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    height: 3rem; /* larger touch target */
    padding: 0 var(--space-12, 1rem);
    color: var(--color-text-primary, #1f2328);
    border-radius: var(--card-radius, 8px);
    letter-spacing: var(--letter-spacing-normal, 0.01em);
    font-weight: var(--font-weight-medium, 500);
    font-size: var(--font-size-base, 1rem);
    cursor: pointer;
    width: 100%;
}

/* Guarantee no underlines and stable color across states */
::deep .qg-nav-link,
::deep .qg-nav-link:link,
::deep .qg-nav-link:visited,
::deep .qg-nav-link:hover,
::deep .qg-nav-link:active,
::deep .qg-nav-link:focus {
    text-decoration: none !important;
    color: var(--color-text-primary, #1f2328) !important; /* never blue/purple */
}

/* Hover focus visuals */
::deep .qg-nav-link:hover { background: var(--color-canvas, #f6f8fa); }
::deep .qg-nav-link:focus-visible { outline: none; box-shadow: var(--focus-ring, 0 0 0 3px rgba(31,111,235,.25)); }

/* Active route indicator - subtle background only */
::deep .qg-nav-link.active {
    background: var(--color-canvas, #f6f8fa);
    color: var(--color-text-primary, #1f2328) !important;
    border: 1px solid var(--color-border-subtle, #e9ecef);
}

/* Sidebar width on desktop if placed as sidebar */
