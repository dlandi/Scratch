                                Property="@(p => p.Price)"
                                Format="C2"
                                Title="Price"
                                HighlightCondition="@(p => p > 500)"
                                ShowTooltip="true" />
                <OptimizedColumn TGridItem="Product" TValue="int"
                                Property="@(p => p.Stock)"
                                Title="Stock"
                                WarningCondition="@(s => s < 25)"
                                ErrorCondition="@(s => s == 0)"
                                ShowTooltip="true" />
