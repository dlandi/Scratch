/**
 * QuickGrid Refined Minimalism - Global Design System
 * 
 * A production-grade minimalist design foundation for technical documentation
 * and data-focused interfaces. Emphasizes precision, restraint, and subtle sophistication.
 * 
 * Philosophy:
 * - Every element must earn its place
 * - Whitespace creates hierarchy and focus
 * - Subtle details discovered, not announced
 * - Mathematical precision in spacing and typography
 */

/* ============================================================================
   CSS CUSTOM PROPERTIES - DESIGN TOKENS
   ========================================================================= */

:root {
  /* -------------------------------------------------------------------------
     COLOR SYSTEM
     Refined neutrals with temperature awareness, single accent color
     ------------------------------------------------------------------------- */
  
  /* Base - Warm off-white for reduced eye strain */
  --color-canvas: #FAFAF9;
  --color-surface: #FFFFFF;
  --color-surface-raised: #FEFEFE;
  
  /* Text - Near-black hierarchy, never pure black */
  --color-text-primary: #1A1A1A;
  --color-text-secondary: #525252;
  --color-text-tertiary: #737373;
  --color-text-disabled: #A3A3A3;
  
  /* Borders - Subtle, precise separation */
  --color-border-subtle: #F5F5F4;
  --color-border-default: #E7E5E4;
  --color-border-emphasis: #D6D3D1;
  --color-border-strong: #A8A29E;
  
  /* Accent - Single color used sparingly for emphasis */
  --color-accent-primary: #2563EB;
  --color-accent-primary-hover: #1D4ED8;
  --color-accent-primary-subtle: #EFF6FF;
  --color-accent-primary-muted: #DBEAFE;
  
  /* Semantic - Minimal, functional color usage */
  --color-success: #059669;
  --color-success-subtle: #F0FDF4;
  --color-success-border: #D1FAE5;
  
  --color-warning: #D97706;
  --color-warning-subtle: #FFFBEB;
  --color-warning-border: #FED7AA;
  
  --color-error: #DC2626;
  --color-error-subtle: #FEF2F2;
  --color-error-border: #FECACA;
  
  --color-info: #0284C7;
  --color-info-subtle: #F0F9FF;
  --color-info-border: #BAE6FD;
  
  /* Code/Technical - Slightly different from text for distinction */
  --color-code-bg: #F5F5F4;
  --color-code-text: #292524;
  --color-code-border: #E7E5E4;
  
  /* -------------------------------------------------------------------------
     TYPOGRAPHY SYSTEM
     Precise scale with deliberate weight hierarchy
     ------------------------------------------------------------------------- */
  
  /* Font Families */
  --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-mono: 'JetBrains Mono', 'SF Mono', 'Consolas', monospace;
  
  /* Font Sizes - Modular scale based on 16px */
  --font-size-xs: 0.75rem;      /* 12px */
  --font-size-sm: 0.875rem;     /* 14px */
  --font-size-base: 1rem;       /* 16px */
  --font-size-lg: 1.125rem;     /* 18px */
  --font-size-xl: 1.25rem;      /* 20px */
  --font-size-2xl: 1.5rem;      /* 24px */
  --font-size-3xl: 1.875rem;    /* 30px */
  --font-size-4xl: 2.25rem;     /* 36px */
  
  /* Font Weights - Strategic hierarchy */
  --font-weight-light: 300;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  
  /* Line Heights - Optimized for readability */
  --line-height-tight: 1.2;
  --line-height-snug: 1.375;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.625;
  
  /* Letter Spacing - Subtle optical adjustments */
  --letter-spacing-tight: -0.01em;
  --letter-spacing-normal: 0;
  --letter-spacing-wide: 0.02em;
  --letter-spacing-wider: 0.05em;
  
  /* -------------------------------------------------------------------------
     SPACING SYSTEM
     8pt grid for mathematical precision
     ------------------------------------------------------------------------- */
  
  --space-0: 0;
  --space-1: 0.125rem;   /* 2px */
  --space-2: 0.25rem;    /* 4px */
  --space-3: 0.375rem;   /* 6px */
  --space-4: 0.5rem;     /* 8px */
  --space-6: 0.75rem;    /* 12px */
  --space-8: 1rem;       /* 16px */
  --space-10: 1.25rem;   /* 20px */
  --space-12: 1.5rem;    /* 24px */
  --space-16: 2rem;      /* 32px */
  --space-20: 2.5rem;    /* 40px */
  --space-24: 3rem;      /* 48px */
  --space-32: 4rem;      /* 64px */
  --space-40: 5rem;      /* 80px */
  --space-48: 6rem;      /* 96px */
  --space-64: 8rem;      /* 128px */
  
  /* -------------------------------------------------------------------------
     LAYOUT & STRUCTURE
     ------------------------------------------------------------------------- */
  
  --container-max-width: 1200px;
  --container-padding: var(--space-16);
  
  --section-gap: var(--space-32);
  --card-padding: var(--space-16);
  --card-radius: 0.25rem;        /* 4px - subtle, not rounded */
  
  /* -------------------------------------------------------------------------
     SHADOWS & ELEVATION
     Minimal depth, subtle presence
     ------------------------------------------------------------------------- */
  
  --shadow-xs: 0 1px 2px rgba(0, 0, 0, 0.04);
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.06);
  --shadow-md: 0 2px 6px rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 4px 12px rgba(0, 0, 0, 0.10);
  
  /* Focus ring - accessible but refined */
  --focus-ring: 0 0 0 3px var(--color-accent-primary-muted);
  
  /* -------------------------------------------------------------------------
     MOTION & ANIMATION
     Precise, intentional movement
     ------------------------------------------------------------------------- */
  
  --duration-instant: 100ms;
  --duration-fast: 150ms;
  --duration-normal: 200ms;
  --duration-slow: 300ms;
  
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  --ease-out: cubic-bezier(0, 0, 0.2, 1);
  --ease-in: cubic-bezier(0.4, 0, 1, 1);
  
  /* -------------------------------------------------------------------------
     GRID & TABLE
     Technical data display optimization
     ------------------------------------------------------------------------- */
  
  --grid-header-height: 2.5rem;   /* 40px */
  --grid-row-height: 2.25rem;     /* 36px */
  --grid-cell-padding-x: var(--space-12);
  --grid-cell-padding-y: var(--space-8);
}

/* ============================================================================
   BASE ELEMENT STYLES
   Refined defaults that respect the design system
   ========================================================================= */

*,
*::before,
*::after {
  box-sizing: border-box;
}

html {
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

body {
  margin: 0;
  padding: 0;
  font-family: var(--font-sans);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-normal);
  line-height: var(--line-height-normal);
  color: var(--color-text-primary);
  background-color: var(--color-canvas);
}

/* ============================================================================
   TYPOGRAPHY ELEMENTS
   Precise hierarchy through size, weight, and spacing
   ========================================================================= */

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-weight: var(--font-weight-semibold);
  line-height: var(--line-height-tight);
  letter-spacing: var(--letter-spacing-tight);
  color: var(--color-text-primary);
}

h1 {
  font-size: var(--font-size-4xl);
  margin-bottom: var(--space-6);
}

h2 {
  font-size: var(--font-size-3xl);
  margin-bottom: var(--space-6);
}

h3 {
  font-size: var(--font-size-2xl);
  margin-bottom: var(--space-4);
}

h4 {
  font-size: var(--font-size-xl);
  margin-bottom: var(--space-4);
}

h5 {
  font-size: var(--font-size-lg);
  margin-bottom: var(--space-3);
}

h6 {
  font-size: var(--font-size-base);
  margin-bottom: var(--space-3);
}

p {
  margin: 0 0 var(--space-12) 0;
  color: var(--color-text-secondary);
  line-height: var(--line-height-relaxed);
}

/* Code elements - Technical precision */
code {
  font-family: var(--font-mono);
  font-size: 0.9em;
  padding: var(--space-1) var(--space-3);
  background-color: var(--color-code-bg);
  color: var(--color-code-text);
  border-radius: 0.1875rem; /* 3px */
  border: 1px solid var(--color-code-border);
}

pre {
  margin: 0 0 var(--space-16) 0;
  padding: var(--space-12);
  background-color: var(--color-code-bg);
  border: 1px solid var(--color-code-border);
  border-radius: var(--card-radius);
  overflow-x: auto;
  font-family: var(--font-mono);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-relaxed);
}

pre code {
  padding: 0;
  background: none;
  border: none;
}

/* Lists - Refined spacing */
ul, ol {
  margin: 0 0 var(--space-12) 0;
  padding-left: var(--space-20);
}

li {
  margin-bottom: var(--space-4);
  color: var(--color-text-secondary);
  line-height: var(--line-height-relaxed);
}

