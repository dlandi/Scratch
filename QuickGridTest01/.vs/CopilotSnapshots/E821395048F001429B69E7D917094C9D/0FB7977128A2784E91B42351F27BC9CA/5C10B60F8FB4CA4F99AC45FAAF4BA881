/* ============================================================================
   GRID / TABLE COMPONENTS
   Optimized for data display with technical precision
   ========================================================================= */

.qg-grid-container {
  background-color: var(--color-surface);
  border: 1px solid var(--color-border-subtle);
  border-radius: var(--card-radius);
  overflow: hidden;
  box-shadow: var(--shadow-xs);
}

.qg-grid {
  width: 100%;
  border-collapse: collapse;
  font-size: var(--font-size-sm);
  table-layout: fixed;
}

.qg-grid thead {
  background-color: var(--color-canvas);
  border-bottom: 1px solid var(--color-border-emphasis);
}

.qg-grid thead th {
  padding: var(--grid-cell-padding-y) var(--grid-cell-padding-x);
  text-align: left;
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-medium);
  letter-spacing: var(--letter-spacing-wide);
  text-transform: uppercase;
  color: var(--color-text-tertiary);
  height: var(--grid-header-height);
  white-space: nowrap;
}

.qg-grid tbody tr {
  border-bottom: 1px solid var(--color-border-subtle);
  transition: background-color var(--duration-fast) var(--ease-in-out);
}

.qg-grid tbody tr:hover {
  background-color: var(--color-canvas);
}

.qg-grid tbody tr:last-child {
  border-bottom: none;
}

.qg-grid tbody td {
  padding: var(--grid-cell-padding-y) var(--grid-cell-padding-x);
  color: var(--color-text-secondary);
  height: var(--grid-row-height);
  vertical-align: middle;
}

/* Alternate row styling - very subtle */
.qg-grid tbody tr:nth-child(even) {
  background-color: rgba(0, 0, 0, 0.01);
}

/* Fix for inputs inside grid cells - prevent double padding and alignment issues */
.qg-grid tbody td input,
.qg-grid tbody td select,
.qg-grid tbody td textarea {
  width: 100%;
  padding: var(--space-2) var(--space-4);
  margin: calc(var(--space-2) * -1) calc(var(--space-4) * -1);
  font-family: var(--font-sans);
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
  background-color: transparent;
  border: 1px solid transparent;
  border-radius: var(--card-radius);
  transition: all var(--duration-fast) var(--ease-in-out);
  box-sizing: border-box;
}

.qg-grid tbody td input:hover,
.qg-grid tbody td select:hover,
.qg-grid tbody td textarea:hover {
  background-color: var(--color-surface);
  border-color: var(--color-border-default);
}

.qg-grid tbody td input:focus,
.qg-grid tbody td select:focus,
.qg-grid tbody td textarea:focus {
  outline: none;
  background-color: var(--color-surface);
  border-color: var(--color-accent-primary);
  box-shadow: var(--focus-ring);
}

.qg-grid tbody td input::placeholder {
  color: var(--color-text-disabled);
}

